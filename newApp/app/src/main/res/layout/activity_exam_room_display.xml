<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".roomcode.examRoomDisplay">

    <TextView
        android:id="@+id/examRoomEndTimeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="20dp"
        android:text="@string/examRoomEndTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/examRoomStartTimeView" />

    <TextView
        android:id="@+id/examRoomEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:text="00 : 00"
        app:layout_constraintStart_toEndOf="@+id/examRoomStartTimeView"
        app:layout_constraintTop_toBottomOf="@+id/examRoomStartTime" />

    <TextView
        android:id="@+id/examRoomTimeRemaining"
        android:layout_width="255dp"
        android:layout_height="117dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/examRoomStartTimeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="20dp"
        android:text="@string/examRoomStartTimePrompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/examRoomTimeRemaining" />

    <TextView
        android:id="@+id/examRoomStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:text="00 : 00"
        app:layout_constraintStart_toEndOf="@+id/examRoomStartTimeView"
        app:layout_constraintTop_toBottomOf="@+id/examRoomTimeRemaining" />
</androidx.constraintlayout.widget.ConstraintLayout>