<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".roomcode.pickDateTime">

    <TextView
        android:id="@+id/pickMonth"
        android:layout_width="48dp"
        android:layout_height="51dp"
        android:layout_marginStart="144dp"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="00"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/pickHour"
        app:layout_constraintTop_toBottomOf="@+id/activitySimpleTimePicker" />

    <TextView
        android:id="@+id/pickDay"
        android:layout_width="48dp"
        android:layout_height="51dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="00"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/pickMonth"
        app:layout_constraintTop_toBottomOf="@+id/activitySimpleTimePicker" />

    <TextView
        android:id="@+id/pickMin"
        android:layout_width="48dp"
        android:layout_height="51dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="00"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/pickHour"
        app:layout_constraintTop_toBottomOf="@+id/activitySimpleTimePicker" />

    <TimePicker
        android:id="@+id/activitySimpleTimePicker"
        android:layout_width="292dp"
        android:layout_height="165dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="156dp"
        android:background="#FFFFFF"
        android:padding="20dp"
        android:timePickerMode="spinner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activitySimpleDatePicker"
        app:layout_constraintVertical_bias="1.0" />

    <DatePicker
        android:id="@+id/activitySimpleDatePicker"
        android:layout_width="330dp"
        android:layout_height="363dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:background="#FFFFFF"
        android:padding="20dp"
        android:timePickerMode="spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pickHour"
        android:layout_width="48dp"
        android:layout_height="51dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="00"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activitySimpleTimePicker" />
</androidx.constraintlayout.widget.ConstraintLayout>